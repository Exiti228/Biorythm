<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:padding="10dp">

    <TextView
        android:id="@+id/textUser1"

        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        />

    <ImageView
        android:id="@+id/delUser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:paddingRight="10dp"
        android:onClick="OnClickDel"
        />

    <ImageView
        android:id="@+id/corUser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:onClick="OnClickCor"
        android:layout_centerVertical="true"
        android:layout_marginEnd="51dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/bornDay1"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textUser1"
        android:layout_below="@+id/textUser1"
        android:text="лћла" />

</RelativeLayout>