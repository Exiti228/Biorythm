<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:paddingLeft="4dp"
                android:text="Прогноз биоритмов для"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="19sp"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:id="@+id/namePrediction"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="16sp"
                android:text="Физический"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text=":"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/physFirst"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/physSecond"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6DF218"
                    android:textSize="16sp"
                    android:text="Эмоциональный"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text=":"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/emFirst"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/emSecond"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0047AB"
                    android:textSize="16sp"
                    android:text="Интеллектуальный"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text=":"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/intelFirst"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/intelSecond"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:textStyle="bold"
                android:id="@+id/sost"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/physImage"

                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/green_triangle" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:text="Физическое состояние:"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:id="@+id/physPrediction"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/emImage"

                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/green_triangle" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:text="Эмоциональное состояние:"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:id="@+id/emPrediction"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/intelImage"

                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/green_triangle" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:text="Эмоциональное состояние:"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:id="@+id/intelPrediction"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>








</LinearLayout>